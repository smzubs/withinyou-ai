{
  "compilerOptions": {
    /* ---------- Core ---------- */
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* ---------- Type Safety ---------- */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* ---------- Aliases & Base ---------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ---------- Next.js Plugin ---------- */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ---------- Build Optimization ---------- */
    "incremental": true
  },

  /* ---------- File Includes ---------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* ---------- Excludes ---------- */
  "exclude": ["node_modules"]
}
